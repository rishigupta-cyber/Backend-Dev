<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Employee Payroll</title>

  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

<!-- ================= HEADER ================= -->
<div class="topbar">
  <div class="logo">
    <img src="/logo.png" alt="logo">
    <div class="logo-text">
      <span class="emp">EMPLOYEE</span>
      <span class="pay">PAYROLL</span>
    </div>
  </div>
</div>

<!-- ================= TOOLBAR ================= -->
<div class="toolbar">
  <h2>Employee Details</h2>

  <div class="right-tools">

    <!-- Search Icon -->
    <div class="search-circle" onclick="toggleSearch()">
      <i class="fa fa-search"></i>
    </div>

    <!-- Add Button -->
    <a href="/add" class="add-btn">+ Add User</a>

  </div>
</div>

<!-- ================= SEARCH POPUP ================= -->
<div class="search-popup" id="searchPopup">
  <form method="GET" action="/">
    <input type="text" name="search" placeholder="Search name...">
    <button type="submit">Search</button>
  </form>
</div>

<!-- ================= TABLE ================= -->
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Department</th>
      <th>Salary</th>
      <th>Start Date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% employees.forEach(emp => { %>
      <tr>

        <td class="name-cell">
          <img src="/<%= emp.avatar || 'avatar1.jpg' %>" alt="avatar">
          <span><%= emp.name %></span>
        </td>

        <td><%= emp.gender %></td>

        <td>
          <span class="tag"><%= emp.department %></span>
        </td>

        <td>â‚¹ <%= emp.salary %></td>

        <td><%= emp.startDate %></td>
        <td>
          <a href="/edit/<%= emp.id %>" class="edit">
            <i class="fa-solid fa-pen"></i>
          </a>

          <a href="/delete/<%= emp.id %>" class="delete">
            <i class="fa-solid fa-trash"></i>
          </a>
        </td>

      </tr>
    <% }) %>
  </tbody>
</table>

<!-- ================= SCRIPT ================= -->
<script>
function toggleSearch() {
  const popup = document.getElementById("searchPopup");
  popup.style.display =
    popup.style.display === "block" ? "none" : "block";
}
</script>

</body>
</html>